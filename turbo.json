{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "seed": {
      "cache": false,
      "persistent": true,
      "env": [
        "GEMINI_API_KEY",
        "YOUTUBE_API_KEY",
        "MINDS_HOST",
        "MINDS_USERNAME",
        "MINDS_PASSWORD"
      ]
    }
  }
}
